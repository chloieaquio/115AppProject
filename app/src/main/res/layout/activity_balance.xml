<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".flexibilityActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center"
                    android:onClick="prevAct"
                    app:srcCompat="@drawable/back" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="5dp"
                    android:text="BALANCE EXERCISE"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/videoView1"
                    android:layout_width="187dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="IMPROVE YOUR BALANCE IN 5 MINUTES"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/desc1"
                        android:layout_width="138dp"
                        android:layout_height="84dp"
                        android:layout_marginLeft="10dp"
                        android:text="Get your body in alignment, release tension and improve your balance with this 5-minute routine from celebrity trainer, Joel Harper."
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/videoView2"
                    android:layout_width="187dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="FITNESS BLENDER BEGINNER BALANCE WORKOUT"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/desc5"
                        android:layout_width="138dp"
                        android:layout_height="84dp"
                        android:layout_marginLeft="10dp"
                        android:text="No information is to be taken as medical or other health advice pertaining to any individual specific health or medical condition."
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/videoView3"
                    android:layout_width="187dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="161dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="BALANCE AND COORDINATION EXERCISE - DR. JO"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/desc3"
                        android:layout_width="138dp"
                        android:layout_height="84dp"
                        android:layout_marginLeft="10dp"
                        android:text="Balance and coordination problems can be caused by injuries, inner ear issues like vertigo, general weakness and more. These exercises should help. "
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/videoView4"
                    android:layout_width="187dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="BALANCE TRAINING EXERCISE"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />

                    <TextView
                        android:id="@+id/desc4"
                        android:layout_width="138dp"
                        android:layout_height="84dp"
                        android:layout_marginLeft="10dp"
                        android:text="Fitness expert Sandra Augustin demonstrates simple balance exercises to engage your core and strengthen your balance."
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>