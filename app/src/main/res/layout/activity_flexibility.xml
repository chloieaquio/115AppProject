<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".flexibilityActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="35dp"
                    android:layout_gravity="center"
                    android:onClick="prevAct"
                    app:srcCompat="@drawable/back" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="5dp"
                    android:text="FLEXIBILITY EXERCISE"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
            //start
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="187dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="goVideoFlex"
                    app:srcCompat="@drawable/fvid1" />

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title1"
                        android:layout_width="146dp"
                        android:layout_height="46dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="TOTAL BODY STRETCH - FLEXIBILITY EXERCISES FOR THE ENTIRE BODY"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />
                    <TextView
                        android:id="@+id/desc2"
                        android:layout_width="138dp"
                        android:layout_height="84dp"
                        android:layout_marginLeft="10dp"
                        android:text="Stretching helps improve your flexibility, which in turn improve your athletic performance and decrease your risk of injury. Enjoy!"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>
            //start
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="187dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="goVideoFlex2"
                    app:srcCompat="@drawable/fvid2" />

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="146dp"
                        android:layout_height="58dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="ULTIMATE DAILY STRETCHING ROUTINE FOR FLEXIBILITY AND RELAXATION"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />
                    <TextView
                        android:id="@+id/desc3"
                        android:layout_width="138dp"
                        android:layout_height="84dp"
                        android:layout_marginLeft="10dp"
                        android:text="So, if you're looking to increase your overall body flexibility, do this video every night before bed and you'll see a difference in your range of motion in as fast as a week!"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>
            //start
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="187dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="goVideoFlex3"
                    app:srcCompat="@drawable/fvid3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="BACK STRETCHES THAT EASE STIFFNESS AND INCREASE FLEXIBILITY"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />
                    <TextView
                        android:id="@+id/desc4"
                        android:layout_width="138dp"
                        android:layout_height="84dp"
                        android:layout_marginLeft="10dp"
                        android:text="Back stretches routine shows you how to ease back stiffness and increase lower back flexibility. "
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>
            //start
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="187dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:onClick="goVideoFlex4"
                    app:srcCompat="@drawable/fvid4" />

                <LinearLayout
                    android:layout_width="174dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title4"
                        android:layout_width="146dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="10 MINUTE BEGINNERS WORKOUT, FULL BODY FLEXIBILITY STRETCHES"
                        android:textSize="12dp"
                        android:textStyle="bold|italic" />
                    <TextView
                        android:id="@+id/desc1"
                        android:layout_width="138dp"
                        android:layout_height="84dp"
                        android:layout_marginLeft="10dp"
                        android:text="This video makes a great short workout on its own or a cool down to do after other workouts from this series."
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="438dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="231dp"
                    tools:layout_editor_absoluteY="404dp">

                    <TextView
                        android:id="@+id/title5"
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="30dp"
                        android:text="MORE TO COME.."
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>